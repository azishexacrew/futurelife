---
method: post
---
{% liquid

  function item = 'lib/data/queries/items/find', id: context.params.id, withOrders: true
  function object = 'lib/commands/items/delete', item: item

  if object.valid
    include 'redirect_to', url: '/dashboard/sell/items'
  else
    assign error = object.errors.base[0]

    function item_url = 'link_to', path: '/dashboard/items/', items: item
    include 'redirect_to', url: item_url, error: error
  endif
%}

