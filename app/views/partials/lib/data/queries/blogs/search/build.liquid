{% parse_json query %}
{
  "limit":        {{ limit | default: 20 }},
  "keyword":      {{ params.keyword | json }},
  "sort_by":      {{ params.sort_by | json }},
  "sort":         {{ sort_options[params.sort_by] | json }},
  "owner":        {{ owner | json }},
}
{% endparse_json %}

{% return query %}
