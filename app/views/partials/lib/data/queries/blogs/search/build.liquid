{% parse_json sort_options %}
{
   "name_desc": { "properties": { "name": "name", "order": "DESC" }},
   "name_asc": { "properties": { "name": "name", "order": "ASC" }},
   "created_at_desc": { "created_at": { "order": "DESC" }},
   "created_at_asc": { "created_at": { "order": "ASC" }}
}
