<form action="/users" method="post" class="form-horizontal">
  {% include 'authenticity_token' %}
  <div class="col-md-12">
      <div class="form-group">
          <label class=" control-label" for="email">E-mail</label>
          <input name="user[email]" type="email" id="email" value="{{ object.email | raw_escape_string }}" class="form-control" placeholder="Enter your e-mail...">
          {% include 'theme/futurelife/field_error', errors: object.errors.email %}
      </div>
      <div class="form-group">
          <label class=" control-label" for="password">Password</label>
          <input name="user[password]" type="password" id="password" value="{{ object.password | raw_escape_string }}" class="form-control" placeholder="Enter your password...">
          {% include 'theme/futurelife/field_error', errors: object.errors.password %}
      </div>
      <button type="submit" class="btn link-button">Sign Up</button>
  </div>
</form>